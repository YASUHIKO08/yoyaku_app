<section class = login_container>
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class= "signin_content" >
      <%= f.label :メールアドレス %><br />
      <%= f.text_field :email, autofocus: true, autocomplete: "email" ,class: "signin_field" %>
    </div>

    <div class= "signin_content" >
      <%= f.label :パスワード %><br />
      <%= f.text_field :password, autocomplete: "current-password" ,class: "signin_field" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="login_field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="signin_actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</section>


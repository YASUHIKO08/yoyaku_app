<section class = register_container>
  <h3>登録施設一覧</h3>
<table class = register_table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>料金</th>
      <th>登録時間</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
    <tr>
    <% if room.img_data.attached? %>
		  <td><%= image_tag(room.img_data,class: "inn_img")%></td>
	  <% else %>
		  <td><%= image_tag "default-room.png",class: "inn_img" %></td>
	  <% end %>
      <td><%= room.inn %></td>
      <td><%= room.introduction %></td>
      <td><%= room.charge %>円</td> 
      <td><%= room.created_at.to_s(:datetime_jp) %></td>
    <tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'トップページに戻る', '/' %>
</section>
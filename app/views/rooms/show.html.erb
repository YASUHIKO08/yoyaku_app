<section class = room_show_container>
	<div class = validate_message>
		<span><%= render "shared/error", obj: @reservation %></span>
	</div>
		<%= link_to '←　戻 る', :back %>
	<% if @room.img_data.attached? %>
		<p><%= image_tag(@room.img_data,class: "show_room_img")%></p>
	<% else %>
		<p><%= image_tag "default-room.png",class: "show_room_img" %></p>
	<% end %>
	<div class = show_content>
		<ul class = show_room_content>
			<li>
				<p class = room_show_name><%= @room.inn %></p>
				<p class = room_show_address><%= @room.address %></p>
				<p class = room_show_introduction><%= @room.introduction %></p>
				<p><span class = room_show_charge>一人当たり¥<%= @room.charge %>円</span></p>
			</li>
		</ul>

	<%= form_with model:@reservation, url: confirm_reservations_path(room_id: @room.id) do |r| %>
			<div class = reservation_form>
				<div class = input_form>
					<p><%= r.label :check_in, 'チェックイン' %></p>
					<p><%= r.text_field :check_in %></p>
				</div>
				<div class = input_form>
					<p><%= r.label :check_out, 'チェックアウト' %></p>
					<p><%= r.text_field :check_out %></p>
				</div>
				<div class = input_form>
					<p><%= r.label :people, '人数' %></p>
					<p><%= r.text_field :people %>人</p>
				</div>
			</div>
					<p class = room_submit><%= r.submit '予約する!' %></p>
		<% end %>	
	</div>
</section>
